# ===================================
# SEI Mate - Advanced AI Agent Configuration
# ===================================
# Complete environment setup for all features

# ===================================
# CORE AI MODEL PROVIDERS (Choose one or more)
# ===================================

# OpenAI (recommended for general use)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic (for Claude models - great for analysis)
ANTHROPIC_API_KEY=your-anthropic-key-here

# OpenRouter (alternative model access)
OPENROUTER_API_KEY=your-openrouter-key-here

# Ollama (local models)
OLLAMA_API_ENDPOINT=http://localhost:11434

# ===================================
# SEI BLOCKCHAIN CONFIGURATION (Required)
# ===================================

# SEI Network Configuration
SEI_NETWORK=mainnet
SEI_PRIVATE_KEY=your_64_character_hex_private_key_without_0x_prefix
SEI_RPC_URL=https://evm-rpc.sei-apis.com
SEI_CHAIN_ID=pacific-1

# Governance Configuration
GOV_RPC_URL=https://rpc.sei-apis.com
GOV_REST_URL=https://rest.sei-apis.com
SEI_MNEMONIC=your twelve word mnemonic phrase here for governance operations

# ===================================
# PLATFORM INTEGRATIONS
# ===================================

# Telegram Bot Integration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_default_chat_id_for_notifications

# Discord Integration
DISCORD_API_TOKEN=your_discord_bot_token
DISCORD_WEBHOOK_URL=your_discord_webhook_url_for_notifications

# Twitter/X Integration (planned)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET_KEY=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# ===================================
# STRATEGY 1: EMBEDDED WALLETS & ONBOARDING
# ===================================

# Privy Configuration for Embedded Wallets
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Community Wallet Configuration
COMMUNITY_WALLET_INITIAL_BALANCE=0.05
SEI_SPONSOR_PRIVATE_KEY=your_community_sponsor_wallet_private_key

# ===================================
# STRATEGY 2: SOCIAL DEFI FEATURES
# ===================================

# Group Swaps Configuration
GROUP_SWAP_MIN_PARTICIPANTS=3
GROUP_SWAP_MAX_PARTICIPANTS=50
GROUP_SWAP_TIMEOUT_MINUTES=30

# Collaborative Governance
POLL_DURATION_HOURS=24
MIN_POLL_PARTICIPANTS=3

# ===================================
# STRATEGY 3: AUTONOMOUS AI AGENT
# ===================================

# Intent Engine Configuration
INTENT_CONFIDENCE_THRESHOLD=0.7
MAX_EXECUTION_STEPS=10
INTENT_ANALYSIS_TIMEOUT=30000

# Autonomous Goals Configuration
EXECUTION_INTERVAL_MINUTES=15
MAX_CONCURRENT_GOALS=10
DEFAULT_SLIPPAGE=1.0

# ===================================
# EXTERNAL SERVICES
# ===================================

# CoinMarketCap for Price Data
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Perpetual Trading (Citrex)
SEI_CITREX_ENVIRONMENT=mainnet
SEI_SUB_ACCOUNT_ID=0

# ===================================
# SYSTEM CONFIGURATION
# ===================================

# Database Configuration
PGLITE_DATA_DIR=/workspace/eliza/sei-agent/.eliza/.elizadb

# Logging Configuration
LOG_LEVEL=info

# Server Configuration
SERVER_PORT=3000

# Feature Flags
IGNORE_BOOTSTRAP=false

# ===================================
# ADVANCED FEATURES CONFIGURATION
# ===================================

# Notification Settings
PRICE_CHECK_INTERVAL=60000
PROPOSAL_CHECK_INTERVAL=300000

# Performance Tuning
MAX_MEMORY_SIZE=1000
MEMORY_DECAY_RATE=0.95
STREAMING_ENABLED=true
BATCH_SIZE=5

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000
MAX_RETRY_ATTEMPTS=3

# ===================================
# DEVELOPMENT SETTINGS
# ===================================

# Environment
NODE_ENV=development

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Testing Configuration
TEST_MODE=false
MOCK_BLOCKCHAIN_CALLS=false
